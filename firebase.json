{
  "hosting": {
    "public": "dist/apps/web_ng",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "remoteconfig": {
    "template": ".github/templates/firebase-remote-config.json"
  }
}
